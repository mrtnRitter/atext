{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AText",
	"patterns": [
		{
			"include": "#blockComment"
		}, 
		{
			"include": "#lineComment"
		}, 
		{
			"include": "#urgentTask"
		}, 
		{
			"include": "#normalTask"
		},
		{
			"include": "#clarifyTask"
		},
		{
			"include": "#headline"
		}
	],
	"repository": {
		"blockComment": {
			"patterns": [
				{
					"begin": "###",
					"end": "###",
					"name": "comment.block.atext"
				}
			]
		}, 
		"lineComment": {
			"patterns": [
				{
					"begin": "##", 
					"end": "\\n",
					"name": "comment.line.number-sign.atext"
				}
			]
		}, 
		"urgentTask": {
			"patterns": [
				{
					"begin": "!!",
					"end": "!!",
					"name": "task.urgent.atext"
				}
			]
		}, 
		"normalTask": {
			"patterns": [
				{
					"begin": " ! \\w+",
					"end": " !",
					"name": "task.normal.atext"
				}
			]
		},
		"clarifyTask": {
			"patterns": [
				{
					"begin": "(?<!\\w)\\? \\w+",
					"end": " \\?",
					"name": "task.clarify.atext"
				}
			]
		},
		"headline": {
			"patterns": [
				{
					"begin": "^[A-Z0-9\\u00c4\\u00d6\\u00dc]",
					"end": "=\\n",
					"name": "headline.atext"
				}
			]
		}
	},
	"scopeName": "source.atext"
}