{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AText",
	"patterns": [
		{
			"include": "#blockComments"
		}, 
		{
			"include": "#lineComments"
		}, 
		{
			"include": "#urgentTask"
		}, 
		{
			"include": "#normalTask"
		}, 
		{
			"include": "#headline"
		}
	],
	"repository": {
		"blockComments": {
			"patterns": [
				{
					"begin": "###",
					"end": "###",
					"name": "comment.block.atext"
				}
			]
		}, 
		"lineComments": {
			"patterns": [
				{
					"begin": "##", 
					"end": "\\n",
					"name": "comment.line.number-sign.atext"
				}
			]
		}, 
		"urgentTask": {
			"patterns": [
				{
					"begin": "!!",
					"end": "!!",
					"name": "task.urgent.atext"
				}
			]
		}, 
		"normalTask": {
			"patterns": [
				{
					"begin": "!",
					"end": "!",
					"name": "task.normal.atext"
				}
			]
		},
		"headline": {
			"patterns": [
				{
					"begin": "^[A-Z\\u00c4\\u00d6\\u00dc]",
					"end": "=\\n",
					"name": "headline.atext"
				}
			]
		}
	},
	"scopeName": "source.atext"
}